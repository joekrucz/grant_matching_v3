{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT --workers 3 --timeout 120 grants_aggregator.wsgi:application",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "watchPatterns": [
    "**/*.py",
    "requirements.txt",
    "manage.py"
  ],
  "ignore": [
    "../Gemfile",
    "../Gemfile.lock",
    "../config.ru",
    "../Rakefile",
    "../bin/rails",
    "../app/",
    "../config/",
    "../db/",
    "../lib/",
    "../spec/",
    "../vendor/"
  ]
}

