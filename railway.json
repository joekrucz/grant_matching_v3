{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "gunicorn grants_aggregator.wsgi:application --bind 0.0.0.0:$PORT --workers 3 --timeout 120",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "watchPatterns": [
    "**/*.py",
    "requirements.txt",
    "manage.py"
  ]
}

